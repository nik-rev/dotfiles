{
  "languages": {
    "Rust": {
      "enable_language_server": true,
      "format_on_save": "on",
      "sticky_scroll": {
        "enabled": true
      }
    },
    "JSON": {
      "enable_language_server": true
    },
    "JSONC": {
      "enable_language_server": true
    },
    "Nu": {
      "enable_language_server": true,
      // off for now, re-visit when `nufmt` is better
      "format_on_save": "off",
      "formatter": {
        "external": {
          "command": "nufmt",
          "arguments": ["--stdin"]
        }
      }
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  },
  // Disable inline blame
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  // Don't show context when scrolling.
  // Requires explicit opt-in per language
  "sticky_scroll": {
    "enabled": false
  },
  // Don't use system prompts, ever. Zed UI is more integrated and cleaner
  "use_system_path_prompts": false,
  "use_system_prompts": false,
  "gutter": {
    // Don't show "Play" button for running code
    "runnables": false,
    // Don't show breakpoint in the gutter
    "breakpoints": false,
    // Disable folds
    "folds": false
    // TODO: Mouse should not activate breakpoint, but if the breakpoint exists then
    // we will show it. Zed doesn't have this feature, so we'll have to contribute it
  },
  "soft_wrap": "editor_width",
  // Disable automatic updater
  "hover_popover_enabled": false,

  // Use Vim keybindings
  "vim_mode": true,
  // Disable language servers by default, except explicitly allowed languages
  "enable_language_server": false,
  // Disable automatic editor formatting.
  "format_on_save": "off",
  // Don't show lightning symbol when there are
  // code actions that we can take
  "inline_code_actions": false,
  "preview_tabs": {
    "enable_keep_preview_on_code_navigation": true,
    "enable_preview_from_file_finder": true
  },
  "scroll_beyond_last_line": "off",
  "tabs": {
    // Don't show the cross "x" when hovering over tabs
    "file_icons": true,
    "show_close_button": "hidden",
    // Show icon in tab when the tab has a warning/error
    "show_diagnostics": "all",
    // Use different color if there are potential changes to commit
    "git_status": true
  },
  // Hide the status bar. The only reason why I'd need it is to check status of the language server,
  // because the editor otherwise doesn't provide that capability
  "status_bar": {
    "experimental.show": false
  },
  "tab_bar": {
    // Don't show left/right arrow on the left
    "show_nav_history_buttons": false,
    // Don't show the "new", "split pane" and "zoom in" buttons
    "show_tab_bar_buttons": false
  },
  "title_bar": {
    // Don't ask me to sign in
    "show_user_picture": false,
    "show_sign_in": false,
    // Don't alert me about new features
    "show_onboarding_banner": false
  },
  "toolbar": {
    // Don't show the 3 buttons for buffer search, selection controls and editor controls
    "quick_actions": false,
    "breadcrumbs": false
  },
  // Every time the current editor loses focus,
  // the file is automatically saved
  "autosave": "on_focus_change",
  "cursor_shape": "bar",
  "relative_line_numbers": "enabled",
  "project_panel": {
    // Hide the root entry when there is only one entry
    // in the workspace
    "hide_root": true
  },
  "terminal": {
    // Selecting text in the terminal copies it to the clipboard
    "copy_on_select": true,
    "shell": {
      // Use nushell as the interactive shell
      "program": "nu"
    }
  },

  // Theme
  "theme": "Catppuccin Mocha",
  "icon_theme": "Material Icon Theme",
  "theme_overrides": {
    "Catppuccin Mocha": {
      // current line number is lavender
      "editor.active_line_number": "#b4befe",
      "syntax": {
        // "mauve" macros
        "function.special": {
          "color": "#f5e0dc"
        }
      }
    }
  },

  // Fonts
  "buffer_font_family": "Fira Mono",
  "ui_font_family": "Fira Mono",
  "ui_font_size": 20.0,
  "buffer_font_size": 20.0,

  // Disable blinking cursor
  "cursor_blink": false,

  // Disable scrollbar
  "scrollbar": {
    "axes": {
      "vertical": false,
      "horizontal": false
    }
  },

  // Disable AI
  "disable_ai": true,

  // Disable telemetry
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // Disable automatic updates
  "auto_update": false,

  // Add support for many languages
  "auto_install_extensions": {
    "kdl": true,
    "material-icon-theme": true,
    "html": true,
    "catppuccin": true,
    "toml": true,
    "git-firefly": true,
    "scss": true,
    "sql": true,
    "ruby": true,
    "vue": true,
    "lua": true,
    "elixir": true,
    "xml": true,
    "zig": true,
    "csharp": true,
    "astro": true,
    "swift": true,
    "dart": true,
    "prisma": true,
    "kotlin": true,
    "biome": true,
    "graphql": true,
    "nix": true,
    "rainbow-csv": true,
    "ini": true,
    "gleam": true,
    "python-requirements": true,
    "r": true,
    "haskell": true,
    "gdscript": true,
    "scala": true,
    "julia": true,
    "powershell": true,
    "templ": true,
    "assembly": true,
    "just": true,
    "odin": true,
    "solidity": true,
    "angular": true,
    "ocaml": true,
    "scheme": true,
    "clojure": true,
    "nu": true,
    "erlang": true,
    "slint": true,
    "v": true,
    "fortran": true,
    "tree-sitter-query": true,
    "tera": true,
    "uiua": true,
    "lean4": true
  },

  // TODO: Disable cursor movement via mouse click. Zed doesn't have the feature, so we must contribute it
  //
  // related: https://www.reddit.com/r/ZedEditor/comments/1i5u0e3/disable_cursor_movement_via_mouse_click/
}
